
@{
    ViewBag.Title = Token.Notifications;
    ViewBag.Description = Token.ThisPageFor + " " + Token.Display
        + " " + Token.AndChar + " "
        + Token.Update + " "
        + " " + Token.AndChar + " "
        + Token.Delete + " "
        + Token.For + " " + Token.Notifications;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Body-->
<div ng-app="ngApp" ng-controller="ctrlNotifications">
    <div class="">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fas fa-bell-o"></i>@Token.Table : @Token.Notifications
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="@Token.Collapse" title="@Token.Collapse"> </a>
                    <a class="reload" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="callFunctions(Country.FkCountry_Id)"> </a>
                    <a href="javascript:;" class="remove" data-original-title="@Token.Delete" title="@Token.Delete"> </a>
                </div>
            </div>

            <div class="portlet-body" style="display: block;">
                <div class="table-scrollable">

                    <!--Form Add New And Show And Update-->
                    <form name="frmCNotificationsFilter" novalidate>
                        <br />
                        <div class="form-group col-lg-3 col-md-3">
                            <label>@Token.Status</label>
                            <select class="form-control cursorPointer"
                                    ng-model="notificationsFilter.isRead">
                                <option value=null>@Token.ViewAll</option>
                                <option value=false>@Token.NotRead</option>
                                <option value=true>@Token.Read</option>

                            </select>
                        </div>
                        <div class="form-group col-lg-3 col-md-3">
                            <br />
                            <a href="javascript:;" data-repeater-create="" class="btn btn-success mt-repeater-add" ng-click="getNotifications(true)">
                                <i class="fas fa-search"></i> @Token.Show
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!--Div Form Table-->
            <div class="portlet-body" style="display: block;">
                <div class="table-scrollable">
                    <!--Form Add New And Show And Update-->
                    <div class="">
                        <table class="table table-striped table-bordered table-advance table-hover" ng-fop-data="notifications" ng-fop-data-repeat="notificationsRepeat">
                            <thead>
                                <tr>
                                    <th class="th-20">
                                        <ng-fop ng-fop-filter="true"
                                                ng-fop-order-by="true"
                                                ng-fop-class-icon="fas fa-pencil-alt"
                                                ng-fop-label="@Token.Title"
                                                ng-fop-placeholder="@Token.Search..."
                                                ng-fop-model="Title"
                                                ng-fop-type-filter="text"></ng-fop>
                                    </th>
                                    <th class="th-60">
                                        <ng-fop ng-fop-filter="true"
                                                ng-fop-order-by="true"
                                                ng-fop-class-icon="fas fa-pencil-alt"
                                                ng-fop-label="@Token.Message"
                                                ng-fop-placeholder="@Token.Search..."
                                                ng-fop-model="Body"
                                                ng-fop-type-filter="text"></ng-fop>
                                    </th>
                                    <th class="th-15">
                                        <ng-fop ng-fop-filter="true"
                                                ng-fop-order-by="true"
                                                ng-fop-class-icon="fas fa-pencil-alt"
                                                ng-fop-label="@Token.CreateDateTime"
                                                ng-fop-placeholder="@Token.Search..."
                                                ng-fop-model="DateTimeSince"
                                                ng-fop-type-filter="text"></ng-fop>
                                    </th>
                                    <th class="th-10"></th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="x in notificationsRepeat track by $index">
                                <tr>
                                    <td>{{x.Title}}</td>
                                    <td>
                                        <textarea class="form-control min-width-100-important input-disabled" ng-model="x.Body" disabled></textarea>
                                    </td>
                                    <td>{{x.DateTimeSince}}</td>
                                    <td>
                                        <input type="button" class="btn btn-success" value="@Token.Read" ng-click="readNotification(x)" ng-hide="x.IsRead" />
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3">
                                        <!--Paging-->
                                        <ng-paging-display-more ng-paging-count-item="10"></ng-paging-display-more>
                                    </td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>




@section scripts{
    <script src="~/Scripts/Angular/Views/notifications/Service.js"></script>
    <script src="~/Scripts/Angular/Views/notifications/Controller.js"></script>
}

