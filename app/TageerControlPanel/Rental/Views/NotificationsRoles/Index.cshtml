
@{
    ViewBag.Title = Token.NotificationsRoles;
    ViewBag.Description = Token.ThisPageFor + Token.Display + " " + Token.AndChar + " " + Token.Added + " " + Token.AndChar + " " + Token.Edit + " " + Token.AndChar + " " + Token.Delete + " " + Token.For + " " + Token.NotificationsRoles;

    Layout = "~/Views/Shared/_Layout.cshtml";
    var priv = DAL.Service.PublicService.GetPrivilegeRole("NotificationsRoles");
}

<!--body-->
@if (priv.Display)
{<div ng-app="ngApp" ng-controller="ctrlNotificationsRoles" ng-init="warningTitle='@Token.Warning';  CanNotDuplicate='@Token.CanNotDuplicate'">
        <div class="">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-bell-o"></i>@Token.NotificationsRoles @Token.Table
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="@Token.collapse" title="@Token.collapse"> </a>
                        <a class="reload" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="CallFunctions(NotificationsRoles.FkdateTypeId)"> </a>
                        <a href="javascript:;" class="remove" data-original-title="@Token.Remove" title="@Token.Remove"> </a>
                    </div>
                </div>

                <!--Div Form Table-->
                <div class="portlet-body" style="display: block;">
                    <div class="table-scrollable">
                        <!--Form Add New And Show And Edit-->
                        <form name="frmNotificationsRoles" novalidate ng-fop-data="AllNotificationsRoles" ng-fop-data-repeat="AllNotificationsRolesRepeat">
                            <table class="table table-striped table-bordered table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th class="th-20">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-label="@Token.Pages"
                                                    ng-fop-model="FKNotificationsTypeId"
                                                    ng-fop-type-filter="select"
                                                    @*if select*@
                                                    ng-fop-options="x.Id as x.Name for x in AllNotificationsPage"></ng-fop>
                                        </th>
                                        <th class="th-25">
                                            <ng-fop ng-fop-filter="true"
                                                      ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-label="@Token.Role"
                                                    ng-fop-model="FkRole_Id"
                                                    ng-fop-type-filter="select"
                                                    @*if select*@
                                                    ng-fop-options="x.Id as x.Name for x in AllRoles"></ng-fop>
                                        </th>
                                        <th class="th-15" ng-init="boolTrue='@Token.Allow';boolFalse='@Token.NotAllow'">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Addition"
                                                    ng-fop-model="Addition"
                                                    ng-fop-type-filter="bool"></ng-fop>
                                        </th>
                                        <th class="th-15" ng-init="boolTrue='@Token.Allow';boolFalse='@Token.NotAllow'">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Edit"
                                                    ng-fop-model="Edit"
                                                    ng-fop-type-filter="bool"></ng-fop>
                                        </th>
                                        <th class="th-15" ng-init="boolTrue='@Token.Allow';boolFalse='@Token.NotAllow'">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Delete"
                                                    ng-fop-model="Delete"
                                                    ng-fop-type-filter="bool"></ng-fop>
                                        </th>
                                          <th class="th-10"> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (priv.Addition)
                                    {
                                        <tr>
                                            <td>
                                                <!--RolesNotification-->
                                                <select class="form-control cursor-pointer" name="rolesNotification" ng-model="RolesNotification.FKNotificationsTypeId" ng-options="x.Id as x.Name for x in AllNotificationsPage" ng-required="true"></select>
                                                <label class="red" ng-show="frmNotificationsRoles.rolesNotification.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                            </td>
                                            <td>
                                                <!--Role-->
                                                <div class="form-group ">
                                                    <select class="form-control cursor-pointer" name="fKRoleId" ng-model="RolesNotification.FkRole_Id"  ng-options="x.Id as x.Name for x in AllRoles" ng-required="true"></select>
                                                    <label class="red" ng-show="frmNotificationsRoles.fKRoleId.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                                </div>
                                            </td>
                                            <td>
                                                <label class="mt-checkbox mt-checkbox-outline">
                                                    <input type="checkbox" class="form-control" ng-model="RolesNotification.Addition">
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="mt-checkbox mt-checkbox-outline">
                                                    <input type="checkbox" class="form-control" ng-model="RolesNotification.Edit">
                                                    <span></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="mt-checkbox mt-checkbox-outline">
                                                    <input type="checkbox" class="form-control" ng-model="RolesNotification.Delete">
                                                    <span></span>
                                                </label>
                                            </td>
                                            
                                                <td>
                                                <i class="fa fa-plus cursor-pointer icont-controller" title="@Token.Save" data-placement="top" data-toggle="tooltip" ng-click="frmNotificationsRoles.$valid?Create(RolesNotification):IsSubmit=true"></i>
                                                <i class="fa fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-click="Restart()"></i>
                                            </td>
                                        </tr>
                                    }

                                    <tr ng-repeat="x in AllNotificationsRolesRepeat track by $index" ng-show="x.State!='Delete'">
                                        <td>
                                            <!--RolesNotification-->
                                            <select class="form-control cursor-pointer input-disabled" name="rolesNotification" ng-model="x.FKNotificationsTypeId" ng-options="x.Id as x.Name for x in AllNotificationsPage" ng-disabled="!(ShowEdit==$index)"></select>
                                            <label class="red" ng-show="frmNotificationsRoles.rolesNotification.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                        </td>
                                        <td>
                                            <!--Role-->
                                            <div class="form-group ">
                                                <select class="form-control cursor-pointer input-disabled" name="fKRoleId" ng-model="x.FkRole_Id"  ng-options="x.Id as x.Name for x in AllRoles" ng-disabled="!(ShowEdit==$index)"></select>
                                                <label class="red" ng-show="frmNotificationsRoles.fKRoleId.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                            </div>
                                        </td>
                                        <td>
                                            <label class="mt-checkbox mt-checkbox-outline">
                                                <input type="checkbox" class="form-control" ng-model="x.Addition" ng-disabled="!(ShowEdit==$index)">
                                                <span></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="mt-checkbox mt-checkbox-outline">
                                                <input type="checkbox" class="form-control" ng-model="x.Edit" ng-disabled="!(ShowEdit==$index)">
                                                <span></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="mt-checkbox mt-checkbox-outline">
                                                <input type="checkbox" class="form-control" ng-model="x.Delete" ng-disabled="!(ShowEdit==$index)">
                                                <span></span>
                                            </label>
                                        </td>
                                        
                                           <td>
                                            @if (priv.Edit)
                                            {
                                                <i class="fa fa-edit cursor-pointer icont-controller" title="@Token.Edit" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit!=$index" ng-click="Change($index)"></i>
                                                <i class="fa fa-save cursor-pointer icont-controller" title="@Token.Save" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit==$index" ng-click="Edit(x,$index)"></i>
                                                <i class="fa fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit==$index" ng-click="RestartEdit(true)"></i>
                                            }
                                            @if (priv.Delete)
                                            {
                                                @*<i class="fa fa-trash  cursor-pointer icont-controller" title="@Token.Delete" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit!=$index" ng-click="DeleteConfirm(x.Id)"></i>*@
                                            }
                                        </td>
                                    </tr>
                                     
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5">
                                            <!--Paging-->
                                            <ng-paging></ng-paging>
                                        </td>
                                        <td>
                                            <a class="btn btn-default green-stripe " ng-class="{'green':frmUserProfile.$valid}" ng-click="SaveChenage(AllNotificationsRoles)">
                                                @Token.SaveChange
                                                <i class="fa fa-save"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->
        </div>
        <!--Delete Undo-->
        <div class="col-lg-3 col-md-3">
            <div class="caption">
                <i class="fa fa-bell-o"></i>@Token.Undo       @Token.Delete
            </div>
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th class="th-90">
                            <div class="icon-addon addon-sm">
                                <input type="text" class="form-control ng-pristine ng-valid ng-empty ng-touched" placeholder="@Token.Search..." ng-model="NotificationsRolesName">
                                <label ng-show="NotificationsRolesName.length==0||NotificationsRolesName==null||NotificationsRolesName==undefined" for="txt2" class="glyphicon glyphicon-search" rel="tooltip"></label>
                                <label ng-show="NotificationsRolesName.length>0&amp;&amp;NotificationsRolesName!=null" class="glyphicon glyphicon-remove-circle ng-hide" ng-click="NotificationsRolesName=undefined"></label>
                            </div>
                        </th>
                        <th class="th-10">

                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="x in AllNotificationsRoles|filter:{'NotificationsRolesName':NotificationsRolesName}" ng-show="x.State=='Delete'">
                        <td>{{x.NotificationsRolesName}}</td>
                        <td><i class="fa fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-click="x.State=null"></i></td>
                    </tr>
                </tbody>
            </table>

        </div>



        <!-- Delete Confirm -->
        <div class="modal fade " id="DeleteConfirm" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">@Token.DeleteConfirm</h4>
                    </div>
                    <div class="modal-body">
                        <p>@Token.AreYouSureDelete ?</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger" ng-click="Delete( )">
                            @Token.YesDelete
                            <i class="fa fa-trash"></i>
                        </button>
                        <button class="btn btn-default" ng-click="CancelDelete( )">
                            @Token.Cancel
                            <i class="fa fa-undo"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="lableErorr text-center">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        @Token.CanNotDisplay
    </h1>
}

@section scripts{
    <script src="~/Scripts/Angular/ViewsNg/NotificationsRoles/Service.js"></script>
    <script src="~/Scripts/Angular/ViewsNg/NotificationsRoles/ControllerJs.js"></script>
}

