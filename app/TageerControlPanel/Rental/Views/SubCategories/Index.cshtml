
@{
    ViewBag.Title = Token.SubCategories;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var priv = PageService.GetPageRole(PageEnumVM.SubCategories);
    ViewBag.Description = string.Format("{0} & {1} & {2} & {3} {4} {5}", Token.ThisPageFor + Token.Display, Token.Added, Token.Update, Token.Delete, Token.For, Token.SubCategories);

}
<!--body-->

@if (priv.IsDisplay)
{
    <div ng-app="ngApp" ng-controller="ctrlSubCategories" >
        <div class="">
            <!-- BEGIN SAMPLE TABLE PORTLET-->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-bell-o"></i>@Token.SubCategories @Token.Table
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="@Token.Collapse" title="@Token.Collapse"> </a>
                        <a class="reload" data-original-title="@Token.ReloadData" title="@Token.ReloadData" ng-click="CallFunctions(SubCategory.FKCategory_Id)"> </a>
                        <a href="javascript:;" class="remove" data-original-title="@Token.Remove" title="@Token.Remove"> </a>
                    </div>
                </div>
                <!--Div Form Table-->
                <div class="portlet-body" style="display: block;">
                    <div class="table-scrollable">

                        <!--Form Add New And Show And Edit-->
                        <form name="frmSubCategory" novalidate>
                            <!--Category-->
                            <div class="form-group col-lg-4">
                                <label class="control-label"> @Token.Category <label class="lableErorr">*</label> </label>
                                <select class="form-control cursor-pointer" name="country" ng-model="SubCategory.FKCategory_Id" ng-options="x.Id as x.CategoryName for x in AllCategory" ng-change="GetSubCategories(SubCategory.FKCategory_Id)" ng-required="true"></select>
                                <label class="lableErorr" ng-show="frmSubCategory.country.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                            </div>
                            <table class="table table-striped table-bordered table-advance table-hover" ng-fop-data="AllSubCategory" ng-fop-data-repeat="AllSubCategoryRepeat">
                                <thead>
                                    <tr>
                                        <th class="th-20">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.NameAr"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="NameAr"
                                                    ng-fop-type-filter="text"
                                                    @*OrderBY*@
                                                    ng-fop-order-by-defult="true"
                                                    ng-fop-order-by-defult-case="true"></ng-fop>
                                        </th>
                                        <th class="th-20">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.NameEn"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="NameEn"
                                                    ng-fop-type-filter="text"></ng-fop>
                                        </th>
                                        <th class="th-20">
                                            <ng-fop ng-fop-filter="true"
                                                    ng-fop-order-by="true"
                                                    ng-fop-requierd="true"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.ImagesCount"
                                                    ng-fop-placeholder="@Token.Search..."
                                                    ng-fop-model="ImagesCount"
                                                    ng-fop-type-filter="number"></ng-fop>
                                        </th>
                                        
                                        <th class="th-30">
                                            <ng-fop ng-fop-filter="false"
                                                    ng-fop-order-by="false"
                                                    ng-fop-requierd="false"
                                                    ng-fop-class-icon="fa fa-pencil"
                                                    ng-fop-label="@Token.Image"
                                                    ng-fop-placeholder="@Token.Search..."></ng-fop>
                                        </th>
                                        <th class="th-10"> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (priv.IsCreate)
                                    {
                                        <tr>
                                            <td class="highlight">
                                                <!--NameAr-->
                                                <div class="form-group ">
                                                    <input type="text" class="form-control" name="nameAr" ng-model="SubCategory.NameAr" ng-maxlength="50" ng-required="true" />
                                                    <label class="lableErorr" ng-show="NameArDuplicate">{{Token.ErrorDuplicate}}</label>

                                                    <label class="lableErorr" ng-show="frmSubCategory.nameAr.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                                    <label class="lableErorr" ng-show="frmSubCategory.nameAr.$error.maxlength&&IsSubmit">@Token.MaxLength 50</label>
                                                </div>
                                            </td>
                                            <td class="hidden-xs">
                                                <!--NameEn-->
                                                <div class="form-group ">
                                                    <input type="text" class="form-control" name="nameEn" ng-model="SubCategory.NameEn " ng-maxlength="50" ng-required="true" />
                                                    <label class="lableErorr" ng-show="NameEnDuplicate">{{Token.ErrorDuplicate}}</label>

                                                    <label class="lableErorr" ng-show="frmSubCategory.nameEn.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                                    <label class="lableErorr" ng-show="frmSubCategory.nameEn.$error.maxlength&&IsSubmit">@Token.MaxLength 50</label>
                                                </div>
                                            </td>
                                            <td>
                                                <!--ImagesCount-->
                                                <div class="form-group ">
                                                    <input type="number" class="form-control" name="imagesCount" ng-model="SubCategory.ImagesCount " min="1" max="20" ng-required="true" />
                                                    <label class="lableErorr" ng-show="frmSubCategory.imagesCount.$error.required&&IsSubmit">@Token.FiledIsRequired</label>
                                                </div>
                                            </td>
                                            <td>
                                                <center>
                                                    <img class="img-circle" width="100" height="100" alt="" src="{{imageeReview.replace('~','')}}">
                                                </center>
                                                <ng-uplaod-image-base up-model-file="SubCategoryNewImage" up-model-image="imageeReview" up-name="rentalImage" up-accept=".jpg,.png,jpeg"></ng-uplaod-image-base>
                                                <label class="lableErorr" ng-show="(SubCategoryNewImage==null||SubCategoryNewImage==undefined)&&IsSubmit">@Token.FiledIsRequired</label>
                                            </td>
                                            <td>
                                                <i class="fa fa-plus cursor-pointer icont-controller" title="@Token.Save" data-placement="top" data-toggle="tooltip" ng-click="frmSubCategory.$valid&&(SubCategoryNewImage!=null||SubCategoryNewImage!=undefined)?Create(SubCategory):IsSubmit=true"></i>
                                                <i class="fa fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-click="Restart()"></i>
                                            </td>
                                        </tr>
                                    }

                                    <tr ng-repeat="x in AllSubCategoryRepeat track by $index" ng-show="x.State!=State.Delete">

                                        <td class="highlight">
                                            <input type="text" class="form-control input-redonly" ng-model="x.NameAr" ng-readonly="ShowEdit!=$index" />
                                            <label class="lableErorr" ng-show="x.NameEnDuplicate">{{Token.ErrorDuplicate}}</label>

                                            <label class="lableErorr " ng-show="x.NameAr==''&&IsEdit">@Token.FiledIsRequired</label>
                                            <label class="lableErorr" ng-show="x.NameAr.length>50&&IsEdit">@Token.MaxLength 50</label>
                                        </td>
                                       
                                        <td class="hidden-xs">
                                            <input type="text" class="form-control input-redonly" ng-model="x.NameEn" ng-readonly="ShowEdit!=$index" />
                                            <label class="lableErorr" ng-show="x.NameEnDuplicate">{{Token.ErrorDuplicate}}</label>

                                            <label class="lableErorr" ng-show="x.NameEn==''&&IsEdit">@Token.FiledIsRequired</label>
                                            <label class="lableErorr" ng-show="x.NameEn.length>50&&IsEdit">@Token.MaxLength 50</label>
                                        </td>
                                         <td>
                                            
                                            <input type="number" class="form-control input-redonly" ng-model="x.ImagesCount" ng-readonly="ShowEdit!=$index" min="1" max="10"/>
                                                               <label class="lableErorr " ng-show="x.ImagesCount==''&&IsEdit">@Token.FiledIsRequired</label>
                                        </td>
                                       
                                        <td>
                                            <center>
                                                <img class="img-circle" width="100" height="100" ng-hide="ShowEdit==$index" alt="" src="{{x.Image}}">
                                                <img class="img-circle" width="100" height="100" ng-show="ShowEdit==$index" alt="" src="{{imagEditReview}}">
                                            </center>
                                            <ng-uplaod-image-base up-model-file="RentalEditImage" up-model-image="imagEditReview" ng-show="ShowEdit==$index" up-name="rentalEditImage" up-accept=".jpg,.png,jpeg"></ng-uplaod-image-base>


                                        </td>
                                        <td>

                                            @if (priv.IsUpdate)
                                            {
                                                <i class="fa fa-edit cursor-pointer icont-controller" title="@Token.Edit" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit!=$index" ng-click="Change($index);imagEditReview=x.FileUrl"></i>
                                                <i class="fa fa-save cursor-pointer icont-controller" title="@Token.Save" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit==$index" ng-click="(x.NameAr!=''&&x.NameAr.length<=50&&x.NameEn!=''&&x.NameEn.length<=50)?Edit(x,imagEditReview,RentalEditImage):IsEdit=true"></i>
                                                <i class="fa fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit==$index" ng-click="RestartEdit(true)"></i>

                                            }
                                            @if (priv.IsDelete)
                                            {
                                                <i class="fa fa-trash  cursor-pointer icont-controller" title="@Token.Delete" data-placement="top" data-toggle="tooltip" ng-show="ShowEdit!=$index" ng-click="DeleteConfirm(x.Id)"></i>
                                            }
                                        </td>
                                    </tr>


                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4">
                                            <!--Paging-->
                                            <ng-paging></ng-paging>
                                        </td>
                                        <td>
                                            <a class="btn btn-default green-stripe " ng-class="{'green':frmUserProfile.$valid}" ng-click="SaveChenage(AllSubCategory)">
                                                @Token.SaveChange
                                                <i class="fa fa-save"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </form>

                    </div>
                </div>
            </div>
            <!-- END SAMPLE TABLE PORTLET-->

            <div class="portlet-body" style="display: block;">
                <div class="table-scrollable">
                    <!--Delete Undo-->
                    <div class="col-lg-3 col-md-3">
                        <div class="caption">
                            <i class="fa fa-bell-o"></i>@Token.Undo       @Token.Delete
                        </div>
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                                <tr>
                                    <th class="th-90">
                                        <div class="icon-addon addon-sm">
                                            <input type="text" class="form-control ng-pristine ng-valid ng-empty ng-touched" placeholder="@Token.Search..." ng-model="SubCategoryName">
                                            <label ng-show="SubCategoryName    .length==0||SubCategoryName==null||SubCategoryName==undefined" for="txt2" class="glyphicon glyphicon-search" rel="tooltip"></label>
                                            <label ng-show="SubCategoryName.length>0&amp;&amp;SubCategoryName!=null" class="glyphicon glyphicon-remove-circle ng-hide" ng-click="SubCategoryName=undefined"></label>
                                        </div>
                                    </th>
                                    <th class="th-10">

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="x in AllSubCategory|filter:{'SubCategoryName':SubCategoryName}" ng-show="x.State==State.Delete">
                                    <td>{{x.SubCategoryName}}</td>
                                    <td><i class="fa fa-undo cursor-pointer icont-controller" title="@Token.Undo" data-placement="top" data-toggle="tooltip" ng-click="x.State=null"></i></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>


        </div>
        <pre ng-show="false">{{SubCategory|json}}</pre>
        <pre ng-show="false">{{AllSubCategory|json:4}}</pre>


        @if (priv.IsDelete)
                {
       <!-- Delete Confirm -->
            <div class="modal fade " id="DeleteConfirm" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">@Token.DeleteConfirm</h4>
                        </div>
                        <div class="modal-body">
                            <p>@Token.AreYouSureDelete ?</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-danger" ng-click="Delete( )">
                                @Token.YesDelete
                                <i class="fa fa-trash"></i>
                            </button>
                            <button class="btn btn-default" ng-click="CancelDelete( )">
                                @Token.Cancel
                                <i class="fa fa-undo"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h1 class="lableErorr text-center">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        @Token.CanNotDisplay
    </h1>
}
@section scripts{
    <script src="~/Scripts/Angular/Views/SubCategories/Service.js"></script>
    <script src="~/Scripts/Angular/Views/SubCategories/ControllerJs.js"></script>
}

